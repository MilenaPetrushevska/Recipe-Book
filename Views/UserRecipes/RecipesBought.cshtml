                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DownloadUrl)
                </td>
                <td>
                    
                    <button><a asp-controller="Recipes" asp-action="Details" asp-route-id="@item.Id">Details</a> </button>
