@model RecipeApp1.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Recipes")
        </dt>
        
        @if (Model.Recipe?.Count == 0)
        {
            <dd class="col-sm-10">None.</dd>
        }
        else
        {
            @foreach (var recipe in Model.Recipe)
            {
                <a asp-controller="Recipes" asp-action="Details" asp-route-id="@recipe.Id">
                    <li>@recipe.Title</li>
                </a>
                <br />
            }
            
        }
           
    </dl>
</div>
<div>
    
                    @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin")))
                    {
                        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> 
                        <span>|</span>
                    }
    <a asp-action="Index">Back to List</a>
</div>
